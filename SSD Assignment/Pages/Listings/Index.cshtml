@page
@model SSD_Assignment.Pages.Listings.IndexModel

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Products.css" />
}

<h2>Listings</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<ul class="products">
    @foreach (var item in Model.Listing)
    {
        <li>
            <a asp-page="./Details" asp-route-id="@item.ID">
                <div class="image-container">
                    <img src="~/Uploads/Listings/@item.PhotoPath">
                </div>
                <h3>
                    @Html.DisplayFor(modelItem => item.Title)
                </h3>
                <h5>
                    $@Html.DisplayFor(modelItem => item.Price)
                </h5>
                <p>
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Condition)
                </p>
                <p>
                    @Html.DisplayFor(modelItem => item.Category)
                </p>
            </a>
        </li>
    }
</ul>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Listing)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    <img src="~/Uploads/Listings/@item.PhotoPath" class="img-thumbnail" width="50" />
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


