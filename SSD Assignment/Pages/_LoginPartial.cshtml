@using Microsoft.AspNetCore.Identity
@using SSD_Assignment.Models
@using SSD_Assignment.Pages.Account
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="navbuttons" asp-page="/Account/Manage/Index" title="Manage">
                    @if (user.ProfilePic == null)
                    {
                        <img class="img-thumbnail img-circle" src="~/Uploads/ProfilePics/default.png" style="width: 60px" />
                    }
                    else
                    {
                        <img class="img-thumbnail img-circle" src="~/Uploads/ProfilePics/@user.ProfilePic" style="width: 60px" />
                    }

                    Hello @user.Name!
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-link navlogout">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="navbuttons" asp-page="/Account/Register">Register</a></li>
        <li><a class="navbuttons" asp-page="/Account/Login">Log in</a></li>
    </ul>
}
